@model IEnumerable<CookingSystem.Web.Models.Recipes.RecipeViewModel>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All</title>
</head>
<body>
    @foreach (var recipe in Model)
    {
        <div calss="text-center" style="float:initial; display:inline-table; margin: 1.5rem;">
            <div class="card border-warning mb-3" style="max-width: 15rem; max-height: 35rem;">
                <div class="card-header"></div>
                <img src="@("~/img/"+recipe.MainImage)" asp-append-version="true" style="max-width: 15rem; max-height: 15rem;" />
                <div class="card-body" style="font-size: 10px;">
                    <h6 class="card-title">@recipe.Name"</h6>
                    <div style="display:inline">
                        <p class="card-text">Category: @recipe.CategoryName</p>
                        <p class="card-text">Level: @recipe.Level</p>
                        <p class="card-text">Time: @recipe.CookingTime</p>
                        <p class="card-text">Portion: @recipe.Portion</p>
                    </div>
                    <div class"card border-dark mb-3" style="display:inline">
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Recipes" asp-route-id="@recipe.Id" onclick="return confirm('Are you sure you want to delete recipe `@recipe.Name`?')">Delete</a>
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Recipes" asp-route-id="@recipe.Id">Details</a>
                        <a class="btn btn-success btn-sm" asp-action="AddImage" asp-controller="Images" asp-route-recipeId="@recipe.Id">Images</a>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

