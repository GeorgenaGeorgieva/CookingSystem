@model List<ImageViewModel>

@{ ViewData["Title"] = "All"; }


<h2>Galery</h2>
<div>
    <h4>ImageModel</h4>
    <hr />
    @foreach (var img in Model)
    {
        <dl class="row">
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/img/"+img.Name)" asp-append-version="true" width="250px" height="250px" />
                <form asp-action="Delete">
                    <input type="hidden" asp-for="@img.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this image.')"/> |
                    <a asp-action="Index">Back</a>
                </form>
            </dd>
        </dl>
    }
    
</div>