@model List<ImageModel>

@{ ViewData["Title"] = "All"; }

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ImageModel</h4>
    <hr />
    @foreach (var img in Model)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => img.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => img.Name)
            </dd>
            <dt class="col-sm-2">
                Uploaded Image
            </dt>
            <dd class="col-sm-10">
                <img src="@("~/img/"+img.Name)" asp-append-version="true" width="250px" height="250px" />
            </dd>
        </dl>
    }


    <form asp-action="Delete">
        @*<input type="hidden" asp-for="" />*@
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>